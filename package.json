{
  "name": "mith",
  "version": "0.0.3",
  "engines": {
    "node": "14.15.4"
  },
  "description": "Full-Stack boilerplate using express, webpack and mithril",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --config ./webpack.prod.conf.js --progress --profile --colors",
    "prod": "export NODE_ENV=production PORT=3000 && node server.js",
    "start": "cross-env NODE_ENV=development webpack serve --config config/webpack.dev.js && node server.js",
    "update-packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andyashall/mithril-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/andyashall/mithril-boilerplate.git/issues"
  },
  "homepage": "https://github.com/andyashall/mithril-boilerplate.git",
  "author": "Andy Ashall",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "*",
    "body-parser": "*",
    "compression": "*",
    "express": "*",
    "mithril": "^2.0.4",
    "mongodb": "*",
    "random-id": "^1.0.4",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.0",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^4.5.0",
    "is-object": "^1.0.2",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.1.2",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^4.2.3",
    "webpack": "^4.1.2",
    "webpack-cli": "^4.0.0",
    "webpack-dev-middleware": "^4.1.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.2.0"
  }
}
